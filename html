  <style>
    body { font-family: 'Inter', sans-serif; }
    .bubble-user { background: #1E40AF; color: white; align-self: flex-end; }
    .bubble-bot { background: #E5E7EB; color: #111827; align-self: flex-start; }
    .bubble { max-width: 80%; padding: 10px 14px; border-radius: 12px; margin: 5px; }
    #chat { display: flex; flex-direction: column; gap: 6px; overflow-y: auto; height: 65vh; padding: 1rem; background: #F9FAFB; border-radius: 8px; }
  </style>
